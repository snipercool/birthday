extends layout

block content
    .container
        h1 Sign In
        div.alert
        form()
          div.form-group
            label.label(for='username') Username
            input.input(type='text' id='login_username' name='username')
          div.form-group
            label.label(for='password') Password
            input.input(type='password' id='login_password' name='password')
          button(type='button' id="login_button") Sign in
        p Don't have an account yet?  
          a(href='/signup') Register here!
    script(src="/javascripts/login.js")